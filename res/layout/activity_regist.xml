<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".RegistActivity" >
	<TextView 
    android:id="@+id/tv_title"
    style="@style/myTitle"
    android:text="注        册"/>
	<RelativeLayout
        android:id="@+id/rl_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_marginTop="20dp" >


        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"         
            android:layout_alignParentTop="true"
            android:padding="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:text="帐        号 "
            android:textSize="20sp" />
        <EditText
            android:id="@+id/et_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/tv_name"
           	android:singleLine="true"
            android:hint="请输入帐号"
            android:padding="3dp" >
           
        </EditText>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_passwod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_name"
        android:layout_marginTop="5dp" >


        <TextView
            android:id="@+id/tv_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"         
            android:layout_alignParentTop="true"
            android:padding="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:text="密        码  "
            android:textSize="20sp" />
        <EditText
            android:id="@+id/et_password"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/tv_password"
           android:singleLine="true"
           android:inputType="textPassword"
            android:hint="请输入密码"
            android:padding="3dp" >
           
        </EditText>
		
    </RelativeLayout>
   <RelativeLayout
        android:id="@+id/rl_re_passwod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_passwod"
        android:layout_marginTop="5dp" >


        <TextView
            android:id="@+id/tv_re_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"         
            android:layout_alignParentTop="true"
            android:padding="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:text="重复密码 "
            android:textSize="20sp" />
        <EditText
            android:id="@+id/et_re_password"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/tv_re_password"
            android:inputType="textPassword"
           android:singleLine="true"
            android:hint="请再次输入密码"
            android:padding="3dp" >
           
        </EditText>
		
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_real_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_re_passwod"
        android:layout_marginTop="5dp" >


        <TextView
            android:id="@+id/tv_real_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"         
            android:layout_alignParentTop="true"
            android:padding="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:text="真实姓名 "
            android:textSize="20sp" />
        <EditText
            android:id="@+id/et_real_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/tv_real_name"
           android:singleLine="true"
            android:hint="请输入真实姓名"
            android:padding="3dp" >
           
        </EditText>
		
    </RelativeLayout>
        <RelativeLayout
        android:id="@+id/rl_maile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_real_name"
        android:layout_marginTop="5dp" >


        <TextView
            android:id="@+id/tv_maile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"         
            android:layout_alignParentTop="true"
            android:padding="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:text="邮         箱 "
            android:textSize="20sp" />
        <EditText
            android:id="@+id/et_maile"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/tv_maile"
           android:singleLine="true"
            android:hint="请输入邮箱"
            android:padding="3dp" >
           
        </EditText>
		
    </RelativeLayout>

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/rl_maile"
            android:layout_marginTop="37dp"
            android:text="注册"
            android:onClick="doClick" />

</RelativeLayout>
